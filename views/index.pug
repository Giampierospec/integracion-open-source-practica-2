extends layout

block content
  #app
    .row
      .col.s8.offset-s2
        .card
          .card-content
            h3.center-align Generaci√≥n archivo JSON
            hr
            form(action="/")
              .row
                .input-field.col.s6
                  input(type="text", v-model="credito.tipoRegistro",@keypress="restrictLength($event,1)")
                  label Tipo Registro
                .input-field.col.s6
                  input(type="text", v-model="credito.universidad", @keypress="restrictLength($event,16)", readonly="true")
                  label Universidad
                .input-field.col.s6
                  input(type="number", v-model="credito.matricula", min="1",@keypress="restrictLength($event,9)")
                  label Matricula
                .input-field.col.s6
                  input(type="text", v-model="credito.nombre")
                  label Nombre
                .input-field.col.s6
                  input(type="text", v-model="credito.carrera")
                  label Carrera
                .input-field.col.s6
                  input(type="number", v-model="credito.montoFinanciar")
                  label Monto A Financiar
                .input-field.col.s6
                  input(type="number", v-model="credito.plazoPago")
                  label Plazo de Pago
                .input-field.col.s6
                  input(type="number", v-model="credito.cedulaGarante" @keypress="restrictLength($event,11)")
                  label Cedula del Garante
                .input-field.col.s6
                  input(type="number", v-model="credito.sueldoGarante")
                  label Sueldo del Garante
                .col.s6.offset-s3
                  button(type="button", @click="sendToApi").waves-effect.waves-light.btn.blue.darken-4 Generar

                
                
                
                
block scripts
  script(src="/js/createJson/crJson.js")
